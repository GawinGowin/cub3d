{
	"tasks": [
		{
			"type": "cppbuild",
			"label": "cube3D-make",
			"command": "make",
			"args": [
				"-C",
				"${workspaceFolder}",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
		},
		{
			"type": "process",
			"label": "norminette",
			"command": "norminette",
			"args": [
				"--use-gitignore",
				"${file}"
			],
			"group": "build",
		},
		{
			"type": "process",
			"label": "norminette staged",
			"command": "bash",
			"args": [
				"-c",
				"git diff --name-only --cached | xargs norminette"
			],
			"group": "build",
		}
	],
	"version": "2.0.0"
}